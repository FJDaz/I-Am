{
  "manifest_version": 3,
  "name": "Assistant Enfance Amiens Overlay",
  "description": "Superpose un assistant de recherche locale sur les pages enfance du site amiens.fr.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.amiens.fr/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/corpus_segments.json"
      ],
      "matches": [
        "https://www.amiens.fr/*"
      ]
    }
  ]
}

